<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE jasperReport PUBLIC "-//JasperReports//DTD Report Design//EN" "http://jasperreports.sourceforge.net/dtds/jasperreport.dtd">

<jasperReport name="MonthlyReport" columnCount="2" pageWidth="595" pageHeight="842" columnWidth="270" columnSpacing="15" leftMargin="20" rightMargin="20" topMargin="30" bottomMargin="30">

	<parameter name="ReportTitle" class="java.lang.String">
	</parameter>
	<parameter name="Date" class="java.util.Date">
	</parameter>
	
	<queryString><![CDATA[SELECT entries.id, entries.toAccountId, entries.fromAccountId, entries.amount FROM entries, transactions WHERE entries.transactionId = transactions.id AND transactions.timestamp > $P{Date}]]></queryString>
	<field name="id" class="java.lang.Long">
	</field>
	<field name="toAccountId" class="java.lang.Long">
	</field>
	<field name="fromAccountId" class="java.lang.Long">
	</field>
	<field name="amount" class="java.lang.Double">
	</field>

	
	<title>
		<band height="100">
			<elementGroup>
			<line>
				<reportElement x="0" y="0" width="555" height="1"/>
				<graphicElement/>
			</line>
			
			</elementGroup>
			<textField isBlankWhenNull="true">
				<reportElement x="180" y="5" width="375" height="35"/>
				<textElement textAlignment="Left">
					<font size="22"/>
				</textElement>
				<textFieldExpression class="java.lang.String"><![CDATA[$P{ReportTitle}]]></textFieldExpression>
			</textField>
			<staticText>
				<reportElement x="180" y="40" width="375" height="15"/>
				<textElement textAlignment="Right">
					<font size="12"/>
				</textElement>
				<text><![CDATA[Written by KrutzKorp]]></text>
			</staticText>
		</band>
	</title>
	<pageHeader>
		<band height="45">
			<rectangle>
				<reportElement mode="Transparent" x="0" y="0" width="555" height="40"/>
				<graphicElement/>
			</rectangle>
			<staticText>
				<reportElement x="0" y="0" width="555" height="25"/>
				<textElement textAlignment="Center">
					<font size="18"/>
				</textElement>
				<text><![CDATA[KrutzKorp Finance Report]]></text>
			</staticText>
		</band>
	</pageHeader>
	<columnHeader>
		<band height="11">
			<rectangle>
				<reportElement x="0" y="0" width="270" height="11" backcolor="#333333"/>
				<graphicElement/>
			</rectangle>
			<staticText>
				<reportElement mode="Opaque" x="0" y="0" width="40" height="11" forecolor="#ffffff" backcolor="#333333"/>
				<textElement textAlignment="Center"/>
				<text><![CDATA[Entry ID]]></text>
			</staticText>
			<staticText>
				<reportElement mode="Opaque" x="40" y="0" width="90" height="11" forecolor="#ffffff" backcolor="#333333"/>
				<textElement textAlignment="Center"/>
				<text><![CDATA[Account To ID]]></text>
			</staticText>
			<staticText>
				<reportElement mode="Opaque" x="130" y="0" width="90" height="11" forecolor="#ffffff" backcolor="#333333"/>
				<text><![CDATA[Account From ID]]></text>
			</staticText>
			<staticText>
				<reportElement mode="Opaque" x="220" y="0" width="50" height="11" forecolor="#ffffff" backcolor="#333333"/>
				<textElement textAlignment="Center"/>
				<text><![CDATA[Amount]]></text>
			</staticText>
		</band>
	</columnHeader>
	<detail>
		<band height="13">
			<rectangle>
				<reportElement x="0" y="4" width="1" height="1" forecolor="#ff0000" backcolor="#ff0000">
				</reportElement>
				<graphicElement/>
			</rectangle>
			<textField>
				<reportElement x="1" y="0" width="35" height="11">
				</reportElement>
				<textElement textAlignment="Center"/>
				<textFieldExpression class="java.lang.Long"><![CDATA[$F{id}]]></textFieldExpression>
			</textField>

			<textField isStretchWithOverflow="true">
				<reportElement x="40" y="0" width="90" height="11"/>
				<textElement textAlignment="Center"/>
				<textFieldExpression class="java.lang.Long"><![CDATA[$F{toAccountId}]]></textFieldExpression>
			</textField>
			<textField isBlankWhenNull="true">
				<reportElement x="130" y="0" width="90" height="11"/>
				<textElement textAlignment="Center"/>
				<textFieldExpression class="java.lang.Long"><![CDATA[$F{fromAccountId}]]></textFieldExpression>
			</textField>
			<textField>
				<reportElement x="220" y="0" width="50" height="11"/>
				<textElement textAlignment="Center"/>
				<textFieldExpression class="java.lang.Double"><![CDATA[$F{amount}]]></textFieldExpression>
			</textField>

			<line>
				<reportElement positionType="Float" x="0" y="12" width="270" height="1" forecolor="#808080"/>
				<graphicElement pen="Thin"/>
			</line>
		</band>
	</detail>
	<summary>
		<band height="65">
			<rectangle>
				<reportElement x="0" y="10" width="555" height="55" backcolor="#c0c0c0"/>
				<graphicElement/>
			</rectangle>
			<staticText>
				<reportElement mode="Opaque" x="200" y="15" width="200" height="45" backcolor="#c0c0c0"/>
				<textElement textAlignment="Justified">
					<font size="12"/>
				</textElement>
				<text><![CDATA[Completed Report]]></text>
			</staticText>
		</band>
	</summary>
</jasperReport>
